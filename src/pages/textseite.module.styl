.content-main
  margin: 0;
  height: 100%
  padding: 0 30px
  display: block
  @media only screen and (min-width: 1024px)
    display: flex

.column-left
  display: block
  width: 100%
  text-align: center
  vertical-align: middle
  left: 0
  @media only screen and (min-width: 1024px)
    width: 40%
    height: 100vh
    position: fixed
    top: 40%
  .title
    font-size: 36px
    @media only screen and (min-width: 1023px)
      font-size: 84px
.column-right
  width: 100%
  height: 62vh
  padding: 10px 5px
  @media only screen and (min-width: 1023px)
    width: 60%
    height: 68vh
    margin-left: 40%
    overflow: auto
  p
    font-size: 12px
    @media only screen and (min-width: 1023px)
      font-size: 18px
    @media only screen and (min-width: 1365px)
      font-size: 24px
