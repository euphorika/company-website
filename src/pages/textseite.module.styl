.content-main
  margin: 0;
  height: 100%
  padding: 0 30px
  display: block
  @media only screen and (min-width: 1024px)
    display: flex

.column-left
  text-align: center
  @media only screen and (min-width: 1024px)
    margin-top: 30%
    width: 40%
  .title
    font-size: 36px
    @media only screen and (min-width: 1024px)
      font-size: 84px
.column-right
  width: 100%
  height: 62vh
  padding: 10px 5px
  overflow: auto
  @media only screen and (min-width: 1024px)
    width: 60%
    height: 71vh
  p
    font-size: 12px
    @media only screen and (min-width: 1024px)
      font-size: 18px
    @media only screen and (min-width: 1366px)
      font-size: 24px
