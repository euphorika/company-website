.page-footer
  background: #00b8d2
  color: #fff
  padding: 20px

  +above('m')
    padding: 50px

  ul
    margin: 0
    li
      margin: 0
      a
        color: #fff
        text-decoration: none

  .contact-information
    font-size: 16px

    +above('m')
      font-size: 22px

    text-align: center

    li, a
      text-decoration: underline

  .legal-advice
    margin-top: 20px
    display: flex
    justify-content: center
    font-size: 12px

    li
      padding: 15px

.fullpage-footer
  width: 100%
  height: 100%

  .page-footer
    width: 100%
    height: 100%
    position: relative

    .contact-information
      display: flex
      justify-content: center
      align-items: center
      width: 100%
      height: 100%

    .legal-advice
      margin-top: 0
      display: block
      position: absolute
      bottom: 25px
      left: 25px

      li
        padding: 0
