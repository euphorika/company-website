.page-footer
  position: relative
  width: 100%
  height: 100%
  color: #fff

  ul
    margin: 0
    li
      margin: 0
      a
        color: #fff
        text-decoration: none

  .contact-information
    display: flex
    justify-content: center
    align-items: center
    width: 100%
    height: 100%
    font-size: 22px
    text-align: center

    li, a
      text-decoration: underline

  .legal-advice
    position: absolute
    bottom: 25px
    left: 25px
    font-size: 12px
