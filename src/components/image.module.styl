.image-container
  position: relative
  width: 100%
  height: 100%

  .title,
  .body
    position: absolute
    z-index: 100

  .title
    color: #fff
    font-size: 45px
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

    +above('m')
      font-size: 90px

  .body
    left: 0
    right: 0
    bottom: 0
    padding: 25px

    +above('m')
      left: 50%
      padding: 50px

    h1
      font-size: 35px
      text-align: right
      strong
        font-size: 135%
