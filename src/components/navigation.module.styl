.page-navigation
  background: #fff
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 100
  align-items: center
  display: none

  &.visible-on-mobile
    display: flex

  .entry
    text-transform: lowercase

    a
      text-decoration: none
      color: #000

  .close-navigation
    position: absolute
    top: 10px
    right: 10px
