@require '../stylus/scrollingtext.config.styl'

.scrolling-text-container
  position: relative
  margin: 0
  height: 100%
  padding: 25px
  font-size: 14px

  .title
    text-align: center
    height: 15%
    margin: 0

    +above(scrollingtext.two-cols-breakpoint)
      position: absolute
      top: 0
      left: 0
      width: 50%
      height: 100%
      display: flex
      align-items: center
      justify-content: center

    h2
      font-size: 50px

      +above(scrollingtext.two-cols-breakpoint)
        font-size: 70px

  .body
    height: 85%
    overflow: auto
    -ms-overflow-style: none
    scrollbar-width: none

    &::-webkit-scrollbar {
      display: none
    }

    +above(scrollingtext.two-cols-breakpoint)
      position: relative
      z-index: 10
      height: 100%
