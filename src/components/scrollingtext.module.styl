@require '../stylus/text.config.styl'
@require '../stylus/header.config.styl'

.scrolling-text-container
  position: relative
  margin: 0
  height: 100%
  padding: 25px
  font-size: 14px

  +above(text.two-cols-breakpoint)
    padding: 70px 0

  .title
    text-align: center
    height: 15%
    margin: 0

    +above(text.two-cols-breakpoint)
      position: absolute
      top: 0
      left: 0
      width: 50%
      height: 100%
      display: flex
      align-items: center
      justify-content: center

    h2
      font-size: 50px

      +above(text.two-cols-breakpoint)
        font-size: 80px
        margin-top: -20%

  .body
    height: 85%
    overflow: auto
    -ms-overflow-style: none
    scrollbar-width: none

    &::-webkit-scrollbar {
      display: none
    }

    +above(text.two-cols-breakpoint)
      position: relative
      z-index: 10
      height: 100%
      padding-right: header.padding + header.navigation-max-width
